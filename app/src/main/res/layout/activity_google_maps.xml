<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_linear_layout"
    >
    <LinearLayout
        android:id="@+id/destination_address_header_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >
        <EditText
            android:id="@+id/destination_address_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="9"
            android:hint="Destination" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="11"
            android:maxLines="2"
            android:text="Find destination"
            />
            <!--android:textAllCaps="false"-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/starting_address_header_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/destination_address_header_linear_layout"
        >
        <EditText
            android:id="@+id/starting_address_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="9"
            android:hint="Starting Address" />

        <Button
            android:id="@+id/route_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Find directions"
            />
    </LinearLayout>
        <!--android:layout_gravity="end|bottom"-->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:zOrderOnTop="false"
        tools:context="com.example.comp3717project.comp3717project.GoogleMapsActivity"
        android:layout_below="@id/starting_address_header_linear_layout"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/locate_me_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="end|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_location_on_black_24dp"
        />


</RelativeLayout>